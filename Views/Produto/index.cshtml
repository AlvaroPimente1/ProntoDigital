@model IEnumerable<ProdutoProntoDigital.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<div class="container mt-5">
    <div class="col mb-4">
        <div class="col-md-6">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col-md-6 text-md-right">
            <a asp-action="Create" class="btn btn-success">Novo Produto</a>
        </div>
    </div>

    <form asp-action="Index" method="get">
        <div class="row mb-4">
            <div class="col-md-6">
                <input type="text" name="produtoFiltrado" class="form-control" placeholder="Digite sua busca" value="@ViewData["CurrentFilter"]" />
            </div>
            <div class="col-md-3 text-md-right">
                <button type="submit" class="btn btn-primary">Pesquisar</button>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Descrição</th>
                        <th>Categoria</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var produto in Model)
                    {
                        <tr>
                            <td>@produto.PROD_ID</td>
                            <td>@produto.PROD_NOME</td>
                            <td>@produto.NomeCategoria</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@produto.PROD_ID" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@produto.PROD_ID" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
