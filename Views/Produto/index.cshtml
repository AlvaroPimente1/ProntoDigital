@model IEnumerable<ProdutoProntoDigital.Models.Produto>

<div class="container mt-4">
    <h2 class="mb-4">Lista de Produtos</h2>
    <a asp-action="Create" asp-controller="Produto" class="btn btn-primary mb-3">Adicionar Produto</a>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Preço</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Categoria</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.PROD_ID</td>
                    <td>@produto.PROD_NOME</td>
                    <td>@produto.PROD_PRECO.ToString("C")</td>
                    <td>@produto.PROD_QTD</td>
                    <td>@produto.NomeCategoria</td>
                </tr>
            }
        </tbody>
    </table>
</div>
