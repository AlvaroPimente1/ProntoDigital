@model ProdutoProntoDigital.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Adicionar Produto";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">

            <div class="form-group">
                <label asp-for="PROD_NOME" class="control-label"></label>
                <input asp-for="PROD_NOME" class="form-control" required/>
                <span asp-validation-for="PROD_NOME" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PROD_PRECO" class="control-label"></label>
                <input asp-for="PROD_PRECO" class="form-control" type="number" step="0.01" required/>
                <span asp-validation-for="PROD_PRECO" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PROD_QTD" class="control-label"></label>
                <input asp-for="PROD_QTD" class="form-control" required />
                <span asp-validation-for="PROD_QTD" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CAT_ID" class="control-label"></label>
                <select asp-for="CAT_ID" class="form-control" asp-items="ViewBag.Categorias"></select>
                <span asp-validation-for="CAT_ID" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Cadastrar Produto" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="Produto" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
