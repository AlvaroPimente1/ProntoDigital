@model IEnumerable<ProdutoProntoDigital.Models.Categoria>

@{
    ViewData["Title"] = "Categorias Inativas";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Index" class="btn btn-primary mb-3">Voltar</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in Model)
            {
                <tr>
                    <td>@categoria.CAT_ID</td>
                    <td>@categoria.CAT_NOME</td>
                    <td>
                        <a asp-action="Activate" asp-route-id="@categoria.CAT_ID" class="btn btn-sm btn-success">Ativar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
